<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/holo_green</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:fontFamily">@fonts/regular</item>

        <item name="colorControlHighlight">@color/app_grey_text</item>
        //added attributes
        <item name="colorControlActivated">@color/black</item>

    </style>



    <style name="CustomRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">@dimen/_10sdp</item>
        <item name="android:maxHeight">@dimen/_10sdp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_large</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:maxHeight">@dimen/_32sdp</item>
    </style>

    <style name="RobotoTextViewStyle" >
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="NavigationText" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="NavigationView" >
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="editText" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="DrawerTextStyle" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>




    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="general_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/black_trans</item>
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="MediumText" parent="MediumSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="general_lable_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="MyCheckBox" parent="Base.Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="roundedCornersImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>


    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="LargeText" parent="LargeSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallerText" parent="SmallerSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallestText" parent="SmallestSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallText" parent="SmallSizeText">
        <item name="android:textColor">@color/app_fontColor</item>
    </style>

    <style name="SmallMediumSizeText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_size_smallMedium</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallMediumText" parent="SmallMediumSizeText"></style>

    <style name="MediumSizeText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="LargeSizeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallerSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/font_size_smaller</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="SmallestSizeText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/font_size_smallest</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="myTextInputLabel" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@android:color/tertiary_text_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/tertiary_text_dark</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/app_grey_text</item>
        <item name="android:textSize">12dp</item>
    </style>


</resources>
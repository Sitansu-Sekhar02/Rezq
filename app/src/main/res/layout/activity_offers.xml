<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="204dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_trans"
                android:src="@drawable/mask_grp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="10dp"
                android:layout_above="@+id/tvTxtrestro"
                android:layout_marginLeft="25dp"
                android:text="@string/dinner"/>
            <TextView
                android:id="@+id/tvTxtrestro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"
                android:layout_alignParentBottom="true"
                android:textSize="16dp"
                android:layout_marginBottom="15dp"
                android:text="@string/dubai_marina"/>
            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_baseline_star_rate_24"
                        android:drawablePadding="5dp"
                        android:text="4.8"
                        android:textColor="#FFB400"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/reating"
                        android:textAllCaps="true"
                        android:layout_toRightOf="@+id/tvRating"
                        android:textColor="#171717"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/Favourite"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textColor="#2B2626"
                        android:textStyle="bold"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_fav"
                        android:layout_alignParentRight="true"
                        android:textSize="12dp" />
                </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/TvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#8D8D8D"
                    android:text="@string/address"/>
                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Neque_porro"
                    android:textColor="#171717"
                    android:textSize="14dp"
                    android:layout_below="@id/TvAddress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open_map"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:layout_alignRight="@+id/tvDesc"
                    android:drawableLeft="@drawable/ic_group_red_map"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:textSize="12dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rezqplus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_below="@+id/tvAlertMsg"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/offers"
                    android:textColor="#8D8D8D"
                    android:textSize="12dp" />
                <LinearLayout
                    android:id="@+id/hotel"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/rezqplus"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotel"
                    android:layout_marginTop="15dp"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="@string/seeall_locked_offer"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginTop="20dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvratings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@+id/tvAlertMsg"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/ratings"
                android:textColor="#8D8D8D"
                android:textSize="12dp" />
            <LinearLayout
                android:id="@+id/tvRatings"
                android:layout_width="match_parent"
                android:layout_below="@+id/tvratings"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
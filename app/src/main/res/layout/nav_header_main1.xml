<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/llHeader">
    <View
        android:layout_width="match_parent"
        android:background="@color/holo_green"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:layout_alignParentBottom="true"
        android:layout_height="3dp"/>


    <LinearLayout
        android:id="@+id/header_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/offer_border"
            android:src="@drawable/ic_guest_profile"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_nav_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mohamed Rizwan"
                    android:textColor="#1B9090"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_rezq_plus_member"
                    android:layout_width="76dp"
                    android:layout_height="20dp"
                    android:text="@string/rezq_mem"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:background="@color/colorPrimary"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/tv_free_membership"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/freemember"
                        android:textColor="#8D8D8D"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/TvseeProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_validity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/tv_validity_from"
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#171717"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/tv_validity_to"
                        android:layout_width="wrap_content"
                        android:textSize="12dp"
                        android:layout_marginLeft="4dp"
                        android:textColor="#171717"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_upgrade"
                    android:layout_width="91dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_border"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="12dp"
                    android:text="@string/upgrade"/>

            </LinearLayout>

    </LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/holo_green" />

    <LinearLayout
        android:id="@+id/header_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_item"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/nav_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_guest_profile" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <com.sa.rezq.view.AppTextView
                android:id="@+id/tv_nav_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Mohamed Rizwan"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/app_text_color"
                android:textStyle="bold" />

            <com.sa.rezq.view.AppTextView
                android:id="@+id/tv_rezq_plus_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/rezq_mem"
                android:textAppearance="@style/SmallerText"
                android:textColor="@color/white"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_free_membership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@string/freemember"
                    android:textAppearance="@style/SmallerText"
                    android:textColor="@color/header_text_color"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_view_profile"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_left_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_validity_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAppearance="@style/SmallerText"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_validity_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text=""
                    android:textAppearance="@style/SmallerText"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.sa.rezq.view.AppTextView
                android:id="@+id/tv_upgrade"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/button_border"
                android:gravity="center"
                android:text="@string/upgrade"
                android:textAllCaps="true"
                android:textAppearance="@style/SmallerText"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

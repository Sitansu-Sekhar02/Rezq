<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/single_imageview_main_rl"
        android:layout_width="158dp"
        android:layout_height="170dp"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardItem_main_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/title_description"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/title_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/product_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/holo_green"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/product_discount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:text=""
                        android:textColor="@color/holo_green"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>
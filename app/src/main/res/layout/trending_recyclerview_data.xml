<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/single_imageview_main_rl"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:visibility="gone"
        android:layout_margin="8dp">
        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:id="@+id/cardItem"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/title_description"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/title_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/product_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/holo_green"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/product_discount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:text=""
                        android:textColor="@color/holo_green"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/double_imageview_main_rl"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_toRightOf="@+id/single_imageview_main_rl"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_height="70dp"
            app:cardCornerRadius="5dp"
            android:layout_width="170dp">
                <RelativeLayout
                    android:id="@+id/first_card_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/first_product_image"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent" />

                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/first_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:gravity="center"
                        android:layout_above="@+id/linear_des"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/linear_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <com.sa.rezq.view.AppTextView
                            android:id="@+id/first_product_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/holo_green"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                        <com.sa.rezq.view.AppTextView
                            android:id="@+id/first_product_discount_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/holo_green"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_width="170dp"
            android:layout_marginTop="10dp">

            <RelativeLayout
                    android:id="@+id/second_card_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/second_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <com.sa.rezq.view.AppTextView
                        android:id="@+id/second_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text=""
                        android:gravity="center"
                        android:layout_above="@+id/linear_second_image"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/linear_second_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">
                        <com.sa.rezq.view.AppTextView
                            android:id="@+id/second_product_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/holo_green"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                        <com.sa.rezq.view.AppTextView
                            android:id="@+id/second_product_discount_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/holo_green"
                            android:textSize="12dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>
        </androidx.cardview.widget.CardView>




        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_trans">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        <RelativeLayout
            android:background="@drawable/dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAlertMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/reedemoffer"
                android:textColor="#171717"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/Tvvendor"
                android:layout_below="@+id/tvAlertMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/enter_vendorcode"
                android:textColor="#171717"
                android:textSize="12dp" />

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tvvendor">

                <in.aabhasjindal.otptextview.OtpTextView
                    android:id="@+id/otpText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#171717"
                    app:bar_active_color="@color/black"
                    app:bar_enabled="true"
                    app:bar_error_color="@color/red"
                    android:layout_marginRight="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:bar_inactive_color="@color/holo_green"
                    app:height="40dp"
                    app:width="40dp"
                    app:bar_height="2dp"
                    app:length="6"
                    app:otp="" />

            </RelativeLayout>



            <Button
                android:layout_marginTop="40dp"
                android:id="@+id/btnReedem"
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="@string/reedm"
                android:background="@drawable/button_border"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_below="@+id/rr"
                />



        </RelativeLayout>



    </RelativeLayout>

    </ScrollView>

</LinearLayout>
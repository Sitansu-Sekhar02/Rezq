<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/wecome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_lock"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/textwel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otpverify"
            android:layout_below="@+id/wecome"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textColor="#171717"
            android:textSize="24dp"/>

            <TextView
                android:id="@+id/txtmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textwel"
                android:layout_marginTop="100dp"
                android:text="@string/enter_otp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="#758591"
                android:textSize="14dp" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                app:hide_otp="true"
                app:bar_enabled="true"
                app:bar_error_color="@color/red"
                android:layout_marginRight="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                app:bar_inactive_color="@color/holo_green"
                app:height="40dp"
                app:width="40dp"
                app:bar_height="2dp"
                app:length="6"
                app:otp="" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_below="@id/etNumber"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:textSize="14dp"
            android:backgroundTint="#1B9090"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:text="@string/verify"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resendotp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginTop="100dp"
                android:textSize="16dp" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/fav_click_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_height="170dp"
            android:id="@+id/cardItem"
            app:cardCornerRadius="8dp"
            android:layout_width="158dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/black_trans"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="158dp"
                    android:layout_height="170dp"
                    android:src="@drawable/pexels_paris" />

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_above="@+id/tv_product_sub_title"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="@string/marina"/>
                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_product_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#39C3C3"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="@string/off_percent"/>
            </RelativeLayout>



        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</RelativeLayout>
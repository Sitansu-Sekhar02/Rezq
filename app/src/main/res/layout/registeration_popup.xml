<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_trans">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

        <RelativeLayout
            android:background="@drawable/dialog_bg"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/newAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_67sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/rezq_logo"/>
                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/iv_logo"
                    android:textStyle="bold"
                    android:textColor="#171717"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_20sdp"
                    android:text="@string/hello_there"/>
                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/tv_text_title"
                    android:textColor="#8D8D8D"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/sub_title"/>
                <com.sa.rezq.view.AppButton
                    android:layout_width="@dimen/_132sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:id="@+id/btn_ok"
                    android:background="@drawable/button_rezq"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/ok_sure"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_sub_title"/>

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/btn_ok"
                    android:textColor="#8D8D8D"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/ok_thanks"/>

            </RelativeLayout>


        </RelativeLayout>



    </RelativeLayout>

    </ScrollView>

</LinearLayout>
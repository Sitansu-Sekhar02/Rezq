<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey_light">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfimeImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_guest_profile" />

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/tv_userfullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_below="@+id/ivProfimeImage"
                    android:textSize="14dp" />

                <com.sa.rezq.view.AppTextView
                    android:visibility="gone"
                    android:layout_width="76dp"
                    android:layout_height="20dp"
                    android:text="@string/rezq_mem"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:layout_below="@+id/tv_userfullName"
                    android:layout_margin="5dp"
                    android:background="@color/holo_green"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/profile_image"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF">
                <LinearLayout
                    android:id="@+id/linearProfile_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.sa.rezq.view.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_name"
                            android:textColor="#5A5A5A"
                            android:textSize="12dp" />

                        <com.sa.rezq.view.AppTextView
                            android:id="@+id/tv_firstname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/fname"
                    android:orientation="vertical">

                    <com.sa.rezq.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp" />

                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/tv_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/mblno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lname"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <com.sa.rezq.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile_no"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp" />

                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/tv_mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mblno"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <com.sa.rezq.view.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_id"
                        android:textColor="#5A5A5A"
                        android:textSize="12dp" />

                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/tv_emailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                </LinearLayout>


                <com.sa.rezq.view.AppButton
                    android:id="@+id/btn_update_profile"
                    android:layout_width="288dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/linearProfile_details"
                    android:layout_marginTop="42dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/button_rezq"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    android:layout_marginBottom="15dp"
                    android:textSize="14dp"
                    app:backgroundTint="@null" />


            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/single_imageview_main_rl"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_8sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardItem_main_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/black_trans"
            app:cardCornerRadius="@dimen/_8sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <com.sa.rezq.view.AppTextView
                    android:id="@+id/product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/title_description"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:gravity="center"
                    android:text=""
                    android:textAppearance="@style/SmallerText"
                    android:textColor="@color/holo_green"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/title_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/product_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textAppearance="@style/SmallerText"
                        android:textColor="@color/holo_green"
                        android:textStyle="bold" />

                    <com.sa.rezq.view.AppTextView
                        android:id="@+id/product_discount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:text=""
                        android:textAppearance="@style/SmallerText"
                        android:textColor="@color/holo_green"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</RelativeLayout>